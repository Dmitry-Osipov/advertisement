<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="0002-drop-advertisements-table" author="dmitry">
        <sql>DROP TABLE IF EXISTS advertisement.advertisements CASCADE;</sql>
    </changeSet>
    <changeSet id="0002-create-table-advertisements" author="dmitry">
        <sql>
            DROP TABLE IF EXISTS advertisement.advertisements;
        </sql>
        <createTable schemaName="advertisement" tableName="advertisements">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="INTEGER" defaultValue="0">
                <constraints nullable="true"/>
            </column>
            <column name="headline" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)" defaultValue="REVIEW">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="advertisement"
                                 baseTableName="advertisements"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_id"
                                 referencedTableSchemaName="advertisement"
                                 referencedTableName="users"
                                 referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>
